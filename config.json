{
    "LOGGING": {
        "level": "DEBUG",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file": "app.log",
        "max_bytes": 10485760,
        "backup_count": 5 
    },
    "UI": {
        "title": "SAW INTRO",
        "bg_color": "black",
        "standby": {
            "image_path": "assets/images/standby.jpg",
            "bg_color": "black"
        },
        "video": {
            "video_base_path": "assets/videos"
        },
        "timer": {
            "duration": 60,
            "font_size": 350,
            "font_path": "Digital-7 Mono",
            "font_color": "red",
            "bg_color": "black"
        },
        "hint": {
            "font_size": 70,
            "font_path": "Bloody Terror",
            "font_color": "red",
            "bg_color": "black",
            "typewriter_effect": true,
            "typing_speed": 50,
            "default_display_duration": 3000,
            "hints": {
                "input_1": "Hint 1",
                "input_2": "Hint 2",
                "input_3": "Hint 3"
            }
        }
    },
    "CAN": {
        "device_id": "0x0D4",
        "channel": "can0",
        "interface": "socketcan",
        "bitrate": 100000,
        "hardware_filters": [
            {
                "can_id": "0x0D4", 
                "can_mask": "0x7FF", 
                "extended": false
            }
        ],
        "software_filters": [
            {
                "name": "video_control",
                "id_range": ["0x0D4", "0x0D4"],
                "payload_conditions": ["0x04", "*", "*", "*", "*", "*", "*", "*"]
            },
            {
                "name": "timer_control",
                "id_range": ["0x0D4", "0x0D4"],
                "payload_conditions": ["0x0C", "*", "*", "*", "*", "*", "*", "*"]
            },
            {
                "name": "restart",
                "id_range": ["0x0D4", "0x0D4"],
                "payload_conditions": ["0x00", "0x00", "0x00", "0x00", "0x00", "0x00", "0x00", "0x00"]
            }
        ]
    },
    "CAN_MANAGER": {
        "listener_thread_poll_interval": 0.1,
        "responder_thread_poll_interval": 0.1,
        "responder_initial_delay": 2,
        "responder_periodic_interval": 2
    }
}
